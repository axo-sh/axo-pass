{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "frittata",
  "version": "0.1.0",
  "identifier": "com.breakfastlabs.frittata",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "cli": {
      "description": "axo gpg pinentry",
      "args": [
        {
          "name": "pinentry",
          "description": "Run in pinentry mode for GPG integration"
        }
      ],
      "subcommands": {
        "get": {
          "description": "Get a secret from the vault",
          "args": [
            {
              "name": "item_url",
              "description": "The URL of the item to get",
              "index": 1,
              "takesValue": true
            }
          ]
        }
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "frittata",
        "width": 400,
        "height": 600,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "./misc/frittata-pinentry": "frittata-pinentry"
    },
    "macOS": {
      "entitlements": "./misc/entitlements.plist"
    }
  }
}
