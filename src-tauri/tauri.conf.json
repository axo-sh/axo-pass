{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Axo Pass",
  "version": "0.1.2",
  "identifier": "com.breakfastlabs.frittata",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "mainBinaryName": "axo-pass",
  "plugins": {
    "cli": {
      "subcommands": {
        "pinentry": {
          "description": "Run in pinentry mode for GPG integration"
        },
        "ssh-askpass": {
          "description": "Run in SSH askpass mode for SSH integration",
          "args": [
            {
              "name": "prompt",
              "description": "SSH prompt",
              "takesValue": true
            }
          ]
        },
        "get": {
          "description": "Get a secret from the vault",
          "args": [
            {
              "name": "item_url",
              "description": "The URL of the item to get",
              "index": 1,
              "takesValue": true
            }
          ]
        },
        "items": {
          "description": "Debug vault items",
          "subcommands": {
            "list": {
              "description": "List vault items"
            },
            "set": {
              "description": "Set a vault item",
              "args": [
                {
                  "name": "vault_key",
                  "description": "The key of the vault item",
                  "index": 1,
                  "takesValue": true,
                  "required": true
                },
                {
                  "name": "item_key",
                  "description": "The key of the item to set",
                  "index": 2,
                  "takesValue": true,
                  "required": true
                },
                {
                  "name": "credential_key",
                  "description": "The key of the credential to set",
                  "index": 3,
                  "takesValue": true,
                  "required": true
                },
                {
                  "name": "secret_value",
                  "description": "The secret value to set",
                  "index": 4,
                  "takesValue": true,
                  "required": false
                }
              ]
            }
          }
        },
        "managed-keys": {
          "description": "Debug cryptographic keys stored in the vault",
          "subcommands": {
            "list": {
              "description": "List managed keys"
            }
          }
        },
        "generic-password": {
          "description": "Debug generic passwords stored in the vault",
          "subcommands": {
            "list": {
              "description": "List generic passwords"
            }
          }
        }
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU0QjA5NDQyQ0VEODJBMzQKUldRMEt0ak9RcFN3NU8xM0Y3L0F5NEtCUHpkdnVkaVV5d29lYnhaTjlLRmd5T291dUhkbTBEN2wK",
      "endpoints": ["https://github.com/axo-sh/axo-pass/releases/latest/download/latest.json"]
    }
  },
  "app": {
    "windows": [
      {
        "title": "frittata",
        "width": 400,
        "height": 600,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "./misc/entitlements.plist",
      "files": {
        "./bin/ap": "./misc/ap",
        "./bin/ap-pinentry": "./misc/ap-pinentry",
        "./bin/ap-ssh-askpass": "./misc/ap-ssh-askpass"
      }
    }
  }
}
